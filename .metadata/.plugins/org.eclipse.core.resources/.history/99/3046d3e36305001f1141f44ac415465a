	<title>Ajout des Chaussures</title>
</head>

<body>
	<div th:replace="template"></div>
	<div class="container mt-5">
		<div class="card">
			<div class="card-header" th:if="${mode=='new'}"> Ajout des Chaussures </div>
			<div class="card-header" th:if="${mode=='edit'}">Modification des Chaussures </div>
			<div class="card-body">
				<form th:action="@{saveChaussure}" method="post">
					
					<input name="page" class="form-control" th:value="${page}" />
					<input name="size" class="form-control" th:value="${size}" />
					
					<div class="form-group">
						<label class="control-label" hidden>ID Chaussure :</label>
						<input type="hidden" name="idChaussure" class="form-control"
							th:value="${chaussure.idChaussure}" />
					</div>
					<div class="form-group">
						<label class="control-label">Nom Chaussure :</label>
						<input type="text" name="nomChaussure" class="form-control" />
						<span th:errors=${chaussure.nomChaussure} class="text-danger"> </span>
					</div>
					<div class="form-group">
						<label class="control-label">Prix Chaussure :</label>
						<input type="text" name="prixChaussure" class="form-control" />
						<span th:errors=${chaussure.prixChaussure} class="text-danger"> </span>
						</div>
						<div class="form-group">
							<label class="control-label">date création :</label>
							<input type="date" name="dateCreation" class="form-control" />
							<span th:errors=${chaussure.dateCreation} class="text-danger"> </span>
						</div>
						<div class="form-group">
							<label class="control-label">Lieu :</label>
							<select name="lieu" class="form-control" th:value="${chaussure.lieu.idLieu}"
								th:if="${!#strings.isEmpty(chaussure.lieu)}">
								<option th:each="c:${lieux}" th:if="${mode=='edit'}" th:value="${c.idLieu}" th:text="${c.nomLieu}"
									th:selected="${ c.idLieu==chaussure.lieu.idLieu}">
								</option>
							</select>
							<!-- s'il s'agit d'un ajout (mode==new) ou d'une modification d'un produit ayant une catégorie null -->
							<select name="categorie" class="form-control" th:if="${#strings.isEmpty(produit.categorie)}">
								<option th:each="c:${categories}" th:value="${c.idCat}" th:text="${c.nomCat}">
								</option>
							</select>
						</div>
						<div>
							<button type="submit" class="btn btn-primary">Ajouter</button>
						</div>
				</form>
			</div>
		</div>
	</div>
